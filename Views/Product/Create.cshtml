@model Product

<div class="container mt-5">
    <h1 class="mb-4 text-center">Dodaj Produkt</h1>

    <form asp-action="Create" method="post" class="card p-4 shadow-sm">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">Nazwa:</label>
            <input asp-for="Name" class="form-control" placeholder="Wprowadź nazwę produktu" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Price" class="form-label">Cena:</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Wprowadź cenę produktu" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="Quantity" class="form-label">Ilość:</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="Wprowadź ilość produktu" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="WarehouseId" class="form-label">Magazyn:</label>
            <select asp-for="WarehouseId" class="form-select" asp-items="@(new SelectList(ViewData["Warehouses"] as IEnumerable<Warehouse>, "Id", "Name"))">
                <option value="">-- Wybierz magazyn --</option>
            </select>
            <span asp-validation-for="WarehouseId" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary w-auto me-2">Dodaj Produkt</button>
            <a asp-action="Index" class="btn btn-secondary w-auto">Powrót</a>
        </div>
    </form>
</div>
