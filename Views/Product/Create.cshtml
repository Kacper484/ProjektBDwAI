@model Aplikacja_na_BDwAI.Models.Product

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodaj Produkt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center text-danger">Dodaj Produkt</h1>

        @if (!string.IsNullOrEmpty(Model.Name))
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Produkt został dodany pomyślnie!</strong>
            <a href="/Product/Index" class="btn btn-primary btn-sm ml-3">Powrót do listy produktów</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
        </div>
        }

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="Name">Nazwa produktu:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price">Cena:</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Quantity">Ilość:</label>
                <input asp-for="Quantity" class="form-control" type="number" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="WarehouseId">Magazyn:</label>
                <select asp-for="WarehouseId" class="form-control" asp-items="@(new SelectList(ViewData["Warehouses"] as List<Aplikacja_na_BDwAI.Models.Warehouse>, "Id", "Name"))">
                    <option value="">Wybierz magazyn</option>
                </select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success mt-3">Zapisz</button>
        </form>
    </div>
</body>
</html>
