<div class="container mt-5">
    <h1 class="mb-4 text-center">Dodaj Produkt</h1>

    <form asp-action="Create" method="post" class="card p-4 shadow-sm">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Nazwa:</label>
            <input name="name" class="form-control" placeholder="Wprowadź nazwę produktu" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="price" class="form-label">Cena:</label>
            <input name="price" type="number" step="0.01" class="form-control" placeholder="Wprowadź cenę produktu" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="quantity" class="form-label">Ilość:</label>
            <input name="quantity" type="number" class="form-control" placeholder="Wprowadź ilość produktu" />
            <span class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="warehouseId" class="form-label">Magazyn:</label>
            <select name="warehouseId" class="form-select">
                <option value="">-- Wybierz magazyn --</option>
                @foreach (var warehouse in ViewBag.Warehouses as SelectList)
                {
                    <option value="@warehouse.Value">@warehouse.Text</option>
                }
            </select>
            <span class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button type="submit" class="btn btn-primary w-auto me-2">Dodaj Produkt</button>
            <a asp-action="Index" class="btn btn-secondary w-auto">Powrót</a>
        </div>
    </form>
</div>
