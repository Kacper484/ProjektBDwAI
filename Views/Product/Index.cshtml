@model IEnumerable<Product>

<div class="container mt-5">
    <h1 class="text-center mb-4">Lista Produktów</h1>
    <a asp-action="Create" class="btn btn-success mb-3">Dodaj Produkt</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Cena</th>
                <th>Ilość</th>
                <th>Magazyn</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                    <td>@product.Warehouse?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
