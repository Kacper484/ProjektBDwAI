@model Order

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuń Zamówienie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center text-danger">Usuń Zamówienie</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <p>Czy na pewno chcesz usunąć to zamówienie?</p>
            <p><strong>Produkt:</strong> @Model.Product.Name</p>
            <p><strong>Ilość:</strong> @Model.Quantity</p>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Usuń</button>
                <a href="/Order/Index" class="btn btn-secondary">Anuluj</a>
            </form>
        }
        else
        {
            <p class="text-center text-danger">Musisz się zalogować, aby usunąć zamówienie.</p>
        }
    </div>
</body>
</html>
