@model Aplikacja_na_BDwAI.Models.Order

<h2>Dodaj zamówienie</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ProductId">Produkt:</label>
        <select asp-for="ProductId" class="form-control">
            <option value="">Wybierz produkt</option>
            @foreach (var product in (List<Aplikacja_na_BDwAI.Models.Product>)ViewData["Products"])
            {
            <option value="@product.Id">@product.Name</option>
            }
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Quantity">Ilość:</label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapisz</button>
</form>
