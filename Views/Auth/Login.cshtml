@model LoginViewModel

<h1>Logowanie</h1>

<form asp-action="Login" method="post">
    <div>
        <label>Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label>Hasło:</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit">Zaloguj</button>
</form>
