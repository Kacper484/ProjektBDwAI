@model IEnumerable<Warehouse>

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Lista Magazynów</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container mt-5">
            <h1 class="text-center text-primary">Lista Magazynów</h1>
            @if (User.IsInRole("Admin"))
        {
            <a href="/Warehouse/Create" class="btn btn-success mb-3">Dodaj Magazyn</a>
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nazwa</th>
                        <th>Lokalizacja</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var warehouse in Model)
                    {
                    <tr>
                        <td>@warehouse.Id</td>
                        <td>@warehouse.Name</td>
                        <td>@warehouse.Location</td>
                        <td>
                            <a href="/Warehouse/Delete/@warehouse.Id" class="btn btn-danger btn-sm">Usuń</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-danger">Musisz być administratorem, aby zobaczyć listę magazynów.</p>
        }
        </div>
    </body>
</html>
