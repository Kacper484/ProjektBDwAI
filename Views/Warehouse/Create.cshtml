<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodaj Magazyn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center text-primary">Dodaj Magazyn</h1>
        @if (ViewBag.Message != null) {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>@ViewBag.Message</strong>
            <a href="/Warehouse/Index" class="btn btn-primary btn-sm ml-3">Powrót do listy magazynów</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
        </div>
        }
        <form method="post" action="/Warehouse/Create">
            <div class="form-group">
                <label for="Name">Nazwa</label>
                <input type="text" id="Name" name="Name" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Location">Lokalizacja</label>
                <input type="text" id="Location" name="Location" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success mt-3">Zapisz</button>
        </form>
    </div>
</body>
</html>
